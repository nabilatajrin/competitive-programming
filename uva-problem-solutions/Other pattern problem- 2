•    #include <stdio.h>
•    int main()
•    {
•        int i,j,n;
•   
•        while(scanf("%d",&n)!=EOF)
•        {
•            char c=65;
•            for(i=1;i<=n;i++)
•            {
•                for(j=c;j<c+i;j++)
•                {
•                    printf("%c",c);
•                }
•                c++;
•                printf("\n");
•            }
•        }
•        return 0;
•    }
