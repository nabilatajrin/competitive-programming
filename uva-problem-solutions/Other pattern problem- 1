•    #include <stdio.h>
•    int main()
•    {
•        int i,j,n,start;
•   
•        while(scanf("%d",&n)!=EOF)
•        {
•		     start= 1;
•            for(i=1;i<=n;i++)
•            {
•                for(j=1;j<=i;j++)
•                {
•                 	printf("%d",start++);   			
•                }
•                printf("\n");
•            }
•        }
•        return 0;
•    }
